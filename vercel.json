{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "framework": null,
  "builds": [
    { 
      "src": "api/**/*.ts", 
      "use": "@vercel/node" 
    },
    { 
      "src": "dist/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    // REGRA CR√çTICA PARA O tRPC (DEVE SER A PRIMEIRA): 
    {
      "src": "/api/trpc/(.*)",
      "dest": "/api/trpc.ts"
    },
    // REGRA PARA OUTROS ENDPOINTS:
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1.ts"
    },
    // REGRA PARA O CLIENTE/FRONTEND:
    { 
      "src": "/(.*)", 
      "dest": "/dist/$1" 
    }
  ]
}