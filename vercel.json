{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "framework": null,
  "builds": [
    { 
      "src": "api/**/*.ts", 
      "use": "@vercel/node" 
    },
    { 
      "src": "dist/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    // 1. REGRA CRÍTICA PARA O tRPC: 
    // Captura qualquer chamada que comece com /api/trpc/ e envia para o handler principal.
    {
      "src": "/api/trpc/(.*)",
      "dest": "/api/trpc.ts" 
    },
    // 2. REGRA PARA OUTROS ENDPOINTS (ex: /api/test-db)
    // Envia o caminho /api/test-db para o arquivo /api/test-db.ts
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1.ts" 
    },
    // 3. REGRA PARA O SERVIÇO VITE/CLIENTE
    { 
      "src": "/(.*)", 
      "dest": "/dist/$1" 
    }
  ]
}