{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "framework": null,
  "builds": [
    { 
      "src": "api/**/*.ts", 
      "use": "@vercel/node" 
    },
    { 
      "src": "dist/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    // Essa é a rota que você já tinha. Ela serve para endpoints como /api/test-db
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1" 
    },
    // **ESTA É A NOVA REGRA CRÍTICA PARA O tRPC**
    // Ela reescreve todos os caminhos que começam com /api/trpc/ 
    // e os envia para o handler principal api/trpc.ts.
    {
      "src": "/api/trpc/(.*)",
      "dest": "/api/trpc.ts"
    },
    { 
      "src": "/(.*)", 
      "dest": "/dist/$1" 
    }
  ]
}