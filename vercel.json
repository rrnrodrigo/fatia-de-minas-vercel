{
  "version": 2,
  "installCommand": "npm install --force", 
  "buildCommand": "npm run build",
  "framework": null,
  "builds": [
    { 
      "src": "api/**/*.ts", 
      "use": "@vercel/node" 
    },
    { 
      "src": "dist/**", 
      "use": "@vercel/static" 
    }
  ],
  "rewrites": [
    {
      "source": "/api/trpc/(.*)",
      "destination": "/api/trpc.ts"
    },
    { 
      "source": "/api/(.*)", 
      "destination": "/api/$1.ts"
    },
    { 
      "source": "/(.*)", 
      "destination": "/dist/$1" 
    }
  ]
}